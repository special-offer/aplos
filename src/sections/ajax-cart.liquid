<div data-section-id="{{ section.id }}" data-section-type="ajax-cart">
  <div class="drawer drawer--ajax-cart">
    <div class="drawer-overflow">
      <a href="#" class="drawer__close" data-drawer-close>
        {% include 'icon-close' %}
      </a>
      <form action="/cart" method="post" novalidate>      
        <div class="drawer__contents">          
          <div class="drawer__header">
            <h6>{{ 'cart.general.title' | t }}</h6>
          </div>
          <div class="drawer__body">
            <div data-ajax-cart-body>
              {% comment %} Filled in via JS {% endcomment %}
            </div>
          </div>
          <div class="drawer__footer">
            <div class="ajax-cart__footer">
              <div class="ajax-cart__footer-row">
                <div>
                  Taxes & Shipping<br />calculated at checkout
                </div>
                <div>
                  <span style="display: inline-block; margin-right: 15px;">Subtotal:</span>
                  <span style="display: inline-block; min-width: 50px; text-align: right;" data-ajax-cart-total>{{ total_price }}</span>
                </div>
              </div>

              <div class="ajax-cart__footer-row">
                <button type="submit" name="checkout" class="btn btn-block btn-secondary">
                  {{ 'cart.general.checkout' | t }}
                </button>
              </div>
            </div>
          </div>

          <div class="ajax-cart__empty">
            <div class="ajax-cart__empty-contents">
              <div class="ajax-cart__empty-text">
                <h3 class="drawer__body-title">
                  {% if section.settings.empty_text != blank %}
                    {{ section.settings.empty_text }}
                  {% else %}
                    {{ 'cart.general.empty' | t }}
                  {% endif %}
                </h3>
              </div>

              {% if section.settings.empty_image %}
                <div class="ajax-cart__empty-image">
                  <img src="{{ section.settings.empty_image | img_url: '900x' }}" />
                </div>
              {% endif %}
            </div>
          </div>          
        </div>
      </form>
    </div>
  </div>
</div>

{% comment %}
  @TODO - instead of complete body template, maybe we just need a line item template?
{% endcomment %}

{% raw %}
  <script type="text/x-handlebars-template" data-ajax-cart-body-template>
    {{#if items}}
      <ul class="ajax-cart__list">
      {{#each items}}
        <li class="ajax-cart__item" data-key="{{ key }}" data-qty="{{ quantity }}" data-ajax-item>
          <div class="ajax-cart__item-image">
            <img src="{{ image }}">
          </div>
          <div class="ajax-cart__item-contents">
            <h3 class="ajax-cart__item-header">
              <a href="{{ url }}" class="ajax-cart__item-title">{{ product_title }}</a>
            </h3>
            <div class="ajax-cart__item-body">
              <div style="line-height: 1;">
                {{ price }}
                {% endraw %}
                {% if section.settings.item_text %}
                  <br />
                  {{ section.settings.item_text }}
                {% endif %}
                {% raw %}
              </div>
              <div>
                <div class="quantity-adjuster" data-quantity-adjuster>
                  <button class="quantity-adjuster__decrement" data-decrement>-</button>
                  <input type="number" value="{{ quantity }}" min="0" />
                  <button class="quantity-adjuster__increment" data-increment>+</button>
                </div>                
              </div>
              <div style="align-self: center; min-width: 50px; text-align: right;">
                {{ line_price }}
              </div>
            </div>
          </div>
        </li>
      {{/each}}
    </ul>
  {{/if}}
  </script>
{% endraw %}


{% schema %}
  {
    "name": "AJAX Cart",
    "settings": [
      {
         "type": "select",
         "id": "cart_style",
         "options": [
            { "value": "single_product", "label": "Single Product"},
            { "value": "multi_product", "label": "Multi Product"}
         ],
         "label": "Cart Style",
         "default": "single_product"
      },
      {
        "id": "item_text",
        "type": "text",
        "label": "Item Text",
        "info": "Shows on every item.  E.g. 'Ships Sept 20, 2021'"
      },
      {
        "type": "header",
        "content": "Empty Cart"
      },
      {
        "id": "empty_text",
        "type": "textarea",
        "label": "Text",
        "default": "There aren't any items<br/>in your cart yet."
      },
      {
        "id": "empty_image",
        "type": "image_picker",
        "label": "Image"
      }
    ]
  }
{% endschema %}
