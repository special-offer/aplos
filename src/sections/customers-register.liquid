{% assign title = 'customer.register.title' | t %}

<div class="layout-content-wrapper" data-section-id="{{ section.id }}" data-section-type="customers-register">
  <div class="container drawer-shifter">

    {% include 'page-header', ph_title: title %}
    
    <div class="row justify-content-center">

      <div class="col-sm-6 col-md-4">
        <h3 class="text-center">{{ title }}</h3>

        {% form 'create_customer' %}
          {{ form.errors | default_errors }}

          <div class="form-group row">
            <label for="FirstName" class="col-3">
              {{ 'customer.register.first_name' | t }}
            </label>
            <div class="col-9">
              <input type="text"
                name="customer[first_name]"
                id="FirstName"
                class="form-control"
                autofocus
                {% if form.first_name %}value="{{ form.first_name }}"{% endif %}>
            </div>
          </div>

          <div class="form-group row">
            <label for="LastName" class="col-3">
              {{ 'customer.register.last_name' | t }}
            </label>
            <div class="col-9">
              <input type="text"
                name="customer[last_name]"
                id="LastName"
                class="form-control"
                {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>
            </div>
          </div>

          <div class="form-group row">
            <label for="Email" class="col-3">
              {{ 'customer.register.email' | t }}
            </label>
            <div class="col-9">
              <input type="email"
                name="customer[email]"
                id="Email"
                class="form-control {% if form.errors contains 'email' %}is-invalid{% endif %}"
                value="{% if form.email %}{{ form.email }}{% endif %}"
                spellcheck="false"
                autocomplete="off"
                autocapitalize="off">
            </div>
          </div>

          <div class="form-group row">
            <label for="CreatePassword" class="col-3">
              {{ 'customer.register.password' | t }}
            </label>
            <div class="col-9">
              <input type="password"
                name="customer[password]"
                id="CreatePassword"
                class="form-control {% if form.errors contains 'password' %}is-invalid{% endif %}">
            </div>
          </div>

          <div class="form-group row">
            <label for="PasswordConfirmation" class="col-3">
              {{ 'customer.reset_password.password_confirm' | t }}
            </label>
            <div class="col-9">
              <input type="password"
                name="customer[password_confirmation]"
                id="PasswordConfirmation"
                class="form-control {% if form.errors contains 'password_confirmation' %}is-invalid{% endif %}">
            </div>
          </div>          
          
          <div class="form-group">
            <input type="submit" value="{{ 'customer.register.submit' | t }}" class="btn btn-primary-reverse btn-block">
          </div>
          <div class="form-group text-center p2">
            <a href="{{ shop.url }}">{{ 'customer.register.cancel' | t }}</a>
          </div>
        {% endform %}        
      </div>

    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Customers - Register",
    "settings": []
  }
{% endschema %}
