{% assign title = 'customer.reset_password.title' | t %}
{% assign subtitle = 'customer.reset_password.subtext' | t: email: email %}

<div class="layout-content-wrapper" data-section-id="{{ section.id }}" data-section-type="customers-reset-password">
  <div class="container drawer-shifter">
    
    {% include 'page-header', ph_title: title, ph_subtitle: subtitle %}

    <div class="row justify-content-center">

      <div class="col-sm-6 col-md-4">
        <h3 class="text-center">{{ title }}</h3>
        {% form 'reset_customer_password' %}
          {{ form.errors | default_errors }}

          <div class="form-group row">
            <label for="ResetPassword" class="col-3">
              {{ 'customer.reset_password.password' | t }}
            </label>
            <div class="col-9">
              <input type="password"
                name="customer[password]"
                id="ResetPassword"
                class="form-control {% if form.errors contains 'password' %}is-invalid{% endif %}">
            </div>
          </div>

          <div class="form-group row">
            <label for="PasswordConfirmation" class="col-3">
              {{ 'customer.reset_password.password_confirm' | t }}
            </label>
            <div class="col-9">
              <input type="password"
                name="customer[password_confirmation]"
                id="PasswordConfirmation"
                class="form-control {% if form.errors contains 'password_confirmation' %}is-invalid{% endif %}">
            </div>
          </div>

          <div class="form-group">
            <input type="submit" class="btn btn-primary btn-block" value="{{ 'customer.reset_password.submit' | t }}">
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Customers - Reset Pass",
    "settings": []
  }
{% endschema %}
