<div class="drawer-shifter" data-section-id="{{ section.id }}" data-section-type="page-philosophy">
  {% render 'page-hero',
            title: section.settings.hero_title,
            bg_image_desktop: section.settings.hero_bg_image,
            bg_image_mobile: section.settings.hero_bg_image_mobile,
  %}  
 
  {% for block in section.blocks %}
    <div class="aplos-row {{ block.settings.height | prepend: 'aplos-row--' }}" {{ block.shopify_attributes }}>
      {% for i in (1..3) %}
        {% assign slot_enabled_setting_handle  = 'slot_' | append: i | append: '_enabled' %}
        {% assign slot_type_setting_handle     = 'slot_' | append: i | append: '_type' %}
        {% assign slot_bg_image_setting_handle = 'slot_' | append: i | append: '_background_image' %}
        {% assign slot_bg_video_setting_handle = 'slot_' | append: i | append: '_background_video_file_url' %}

        {% if block.settings[slot_enabled_setting_handle] == true %}
          {% render 'aplos-block'
                    type: block.settings[slot_type_setting_handle],
                    bg_image: block.settings[slot_bg_image_setting_handle],
                    bg_video_file_url: block.settings[slot_bg_video_setting_handle]
          %}
        {% endif %}
      {% endfor %}
    </div>
  {% endfor %}

  {% raw %}
    <script type="text/x-handlebars-template" data-slot-template>
      {{#if heading}}
        <div class="aplos-block__top-title d-none d-md-block{{#if light_text }} text-white{{/if}}">{{ heading }}</div>
      {{/if}}
      {{#if title}}
        <div class="aplos-block__title{{#if light_text }} text-white{{/if}}">{{ title }}</div>
      {{/if}}
      {{#if heading}}
        <div class="aplos-block__bottom-title d-md-none{{#if light_text }} text-white{{/if}}">{{ heading }}</div>
      {{/if}}      
    </script>
  {% endraw %}  
</div>


{% schema %}
  {
    "name": "Philosophy Page",
    "settings": [
      {
        "type": "header",
        "content": "Hero"
      },
      {
        "type": "text",
        "id": "hero_title",
        "label": "Title"
      },
      {
        "type": "image_picker",
        "id": "hero_bg_image",
        "label": "Background Image (Desktop)"
      },
      {
        "type": "image_picker",
        "id": "hero_bg_image_mobile",
        "label": "Background Image (Mobile)"
      },
      {
        "type": "header",
        "content": "Rows",
        "info": "Row text content will be supplied by the 'Philosophies' entered in the section above"
      }
    ],
    "blocks": [
      {
        "type": "row",
        "name": "Row",
        "settings": [
          {
            "type": "select",
            "id": "height",
            "options": [
              { "value": "tall", "label": "Tall"},
              { "value": "medium", "label": "Medium"},
              { "value": "short", "label": "Short"}
            ],
            "label": "Height",
            "default": "tall"
          },     
          {
            "type": "header",
            "content": "Slot 1"
          },
          {
            "type": "checkbox",
            "id": "slot_1_enabled",
            "label": "Enabled",
            "default": false
          },
          {
            "type": "select",
            "id": "slot_1_type",
            "options": [
              { "value": "media", "label": "Media"},
              { "value": "text", "label": "Text"}
            ],
            "label": "Type",
            "default": "media"
          },     
          {
            "type": "image_picker",
            "id": "slot_1_background_image",
            "label": "Background Image"
          },
          {
            "type": "url",
            "id": "slot_1_background_video_file_url",
            "label": "Background Video File URL"
          },          
          {
            "type": "header",
            "content": "Slot 2"
          },
          {
            "type": "checkbox",
            "id": "slot_2_enabled",
            "label": "Enabled",
            "default": false
          },
          {
            "type": "select",
            "id": "slot_2_type",
            "options": [
              { "value": "media", "label": "Media"},
              { "value": "text", "label": "Text"}
            ],
            "label": "Type",
            "default": "media"
          },        
          {
            "type": "image_picker",
            "id": "slot_2_background_image",
            "label": "Background Image"
          },
          {
            "type": "url",
            "id": "slot_2_background_video_file_url",
            "label": "Background Video File URL"
          },  
          {
            "type": "header",
            "content": "Slot 3"
          },
          {
            "type": "checkbox",
            "id": "slot_3_enabled",
            "label": "Enabled",
            "default": false
          },
          {
            "type": "select",
            "id": "slot_3_type",
            "options": [
              { "value": "media", "label": "Media"},
              { "value": "text", "label": "Text"}
            ],
            "label": "Type",
            "default": "media"
          },        
          {
            "type": "image_picker",
            "id": "slot_3_background_image",
            "label": "Background Image"
          },
          {
            "type": "url",
            "id": "slot_3_background_video_file_url",
            "label": "Background Video File URL"
          }
        ]
      }
    ]
  }
{% endschema %}
