  </head>
  <body>
    <table class="body">
      <tr class="header-img__row">
        <td class="header-img__cell">
          <img src="https://cdn.shopify.com/s/files/1/0042/3978/6113/files/Logo_Wordmark.png?v=1596567141" class="header-img__img" />
        </td>
      </tr>     
      <tr>
        <td>
          <table class="row content">
            <tr>
              <td class="content__cell">
                <center>
                  <table class="container">
                    <tr>
                      <td>
                        {% if customer.first_name %}
                          Dear {{ customer.first_name }},<br /><br /><br />
                        {% endif %}                        
                        <p>{{ email_body }}</p>
                        {% if shop.url %}
                          <p><a href="{{ customer.subscribe_url }}" style="border-bottom: 1px solid;">Click Here to Confirm</a></p>
                        {% endif %}
                      </td>
                    </tr>
                  </table>
                </center>
              </td>
            </tr>
          </table>
          <center>
            <table class="container">
              <tr>
                <td>
                  <table class="row footer">
                    <tr>
                      <td class="footer__cell">
                        <table>
                          <tr>
                            <td>
                              {% if shop.url %}
                              <a href="{{ shop.url }}">{{ shop.name }}</a>
                              {% else %}
                                {{ shop.name }}
                              {% endif %}
                            </td>
                            <td>
                              {% if shop.url %}
                                <a href="{{ shop.url }}/pages/help">
                                  Help
                                </a>
                              {% endif %}
                              {% if shop.email %}
                                <br />
                                <a href="mailto:{{ shop.email }}">Contact Us</a>
                              {% endif %}
                            </td>
                            <td style="text-align: right;">
                              <a href="https://www.instagram.com/aplos.world/">Instagram</a>
                            </td>                            
                          </tr>
                        </table>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
          </center>
          <img src="{{ 'notifications/spacer.png' | shopify_asset_url }}" class="spacer" height="1" />
        </td>
      </tr>
    </table>
  </body>
</html>